<script type="text/javascript">
    $(".checkParam").change(function () {
        console.log($(this))
        if (this.checked) {
            $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
        } else {
            $(this).closest("tr").next().remove();
        }
    });
    $('.checkall').change(function () {
        console.log(this.checked);
        if (this.checked) {
            $(".checkParam").attr('checked', 'checked');

        } else {
            $(".checkParam").removeAttr('checked');
        }
        const e = new Event("change");
        const element = document.querySelector('.checkParam')
        element.dispatchEvent(e);
    });
    $(".checkall2").change(function () {
        console.log($("input[class= 'checkParam2']"));
        if (this.checked) {
            $("input[class='checkParam2']").attr('checked', 'checked');

        } else {
            $("input[class='checkParam2']").removeAttr('checked');
        }
    });

</script>
