@using Metalkit.Models;

@{
    ViewBag.Title = "Edit";
    Layout = null;
    List<VMParametro> listaParametro = new List<VMParametro>();
    var valor = 
    listaParametro = ViewBag.listaParametros;

}
@using (Html.BeginForm("CreateEstandar", "Formularios", FormMethod.Post, new { @class = "form-horizontal", id = "form", name = "form", role="form" }))
{
    @Html.AntiForgeryToken()
<div class="card card-primary">
    <div class="card-header">
        <div class="card-title">
            Detalle de proyecto Estándar
        </div>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 form-group">
                <label for="itramite">Modelo a cotizar</label>
                @Html.DropDownList("iproyecto", null, "Seleccione", htmlAttributes: new { @class = "form-control search-select", @onchange = "CargarProyecto()" })
            </div>
        </div>
        <div class="row">

            <div class="col-md-6">
                <table class="table table-striped table-hover tablaSecundaria dataTable no-footer" id="tabla_Producto">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Código</th>
                            <th>Descripción</th>
                            <th>Superficie</th>
                            <th>Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-striped table-hover tablaSecundaria dataTable no-footer">
                    <tr>
                        <th style="width: 15%;"><label class="control-label"><input type="checkbox" class="checkall" value="" id="checkall"> </label></th>
                        <th>Descripción</th>
                        <th>Valor</th>
                    </tr>
                    @foreach (var item in listaParametro)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" class="checkParam" value="" id="@item.Id">
                                @*<img src="~/Images/plus.png" />*@
                                <div style="display:none">
                                    <table class="table table-striped table-hover tablaSecundaria dataTable no-footer" width="50%">
                                        <tr>
                                            <th><input type="checkbox" class="checkall2" id="checkall2"> Seleccionar Todo</th>
                                            <th>Descripción</th>
                                            <th>Valor</th>
                                        </tr>
                                        @foreach (var item2 in item.ParamNvl2)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox" class="checkParam2" value="" id="@item2.Id">
                                                </td>
                                                <td>@item2.Descripcion</td>
                                                <td>@item2.Valor</td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </td>
                            <td>@item.Descripcion</td>
                            <td>@item.Valor</td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <div class="card card-primary">
            <div class="card-header">
                <div class="card-title">
                    Despacho
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Fecha Entrega</label>
                    <div class="col-lg-10">
                        <div class="input-group date col-md-5">
                            <input type="date" class="form-control" value="03/04/2014">
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Tipo Entrega</label>
                    <div class="col-lg-10">
                        <div class="i-checks"><label> <input type="radio" value="rdTipoEntrega" name="rdTipoEntrega"> <i></i> Retira Cliente </label></div>
                        <div class="i-checks"><label> <input type="radio" value="option1" id="rdTipoEntrega" name="rdTipoEntrega"> <i></i> Despacha Metalkit </label></div>

                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Dirección</label>
                    <div class="col-lg-10">
                        <input type="text" placeholder="Dirección" class="form-control" id="tbDireccion" name="tbDireccion">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Región</label>
                    <div class="col-sm-10">
                        @Html.DropDownList("iregionEnvio", null, "Seleccione", htmlAttributes: new { @class = "form-control  search-select", @onchange = "CargaComunasEnvio()" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Comuna</label>
                    <div class="col-sm-10">
                        @Html.DropDownList("icomunaEnvio", null, "Seleccione", htmlAttributes: new { @class = "form-control  search-select" })
                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-12">
            <div class="text-right">
                <button class="btn btn-primary hidden" type="button" id="btnGuardar"><i class="fa fa-check"></i>&nbsp;Guardar</button>
                <button class="btn btn-primary" type="button" onclick="validarClases()" id="b_calcular"><i class="fa fa-edit"></i>&nbsp;Calcular</button>
                <button class="btn btn-default" type="button" id="btnLimpiar" onclick="location.reload();"><i class="fa fa-trash"></i>&nbsp;Limpiar</button>
            </div>
        </div>
    </div>
    </div>


        
}

<script type="text/javascript">
    $(".checkParam").change(function () {
        console.log($(this))
        if (this.checked) {
            $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
        } else {
            $(this).closest("tr").next().remove();
        }
    });
    $('.checkall').change(function () {
        console.log(this.checked);
        if (this.checked) {
            $(".checkParam").attr('checked', 'checked');

        } else {
            $(".checkParam").removeAttr('checked');
        }
        const e = new Event("change");
        const element = document.querySelector('.checkParam')
        element.dispatchEvent(e);
    });
    $(".checkall2").change(function () {
        console.log($("input[class= 'checkParam2']"));
        if (this.checked) {
            $("input[class='checkParam2']").attr('checked', 'checked');

        } else {
            $("input[class='checkParam2']").removeAttr('checked');
        }
    });

</script>
