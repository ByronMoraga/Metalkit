@model IEnumerable<Metalkit.Models.Producto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal fade in" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModal" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title">Create</h4>
                    </div>
                    <div class="modal-body">
                        <div id="createContainer">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModal" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="editContainer">
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="deleteContainer">
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <i class="fa fa-info-circle"></i> Panel de acciones
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">

                        <div class="col-sm-12">
                            <div class="text-right">
                                <p>
                                    <button type="button" class="btn btn-default btn-md" data-toggle="modal" data-url="@Url.Action("Create","MantProductos")" id="btnAgregar">
                                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Nuevo Registro
                                    </button>
                                </p>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
<div class="panel-body">
    <div class="table-responsive">
        <table class="table" style="width:100%" id="Grilla_Parametro">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Codigo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Superficie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Imagen)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


@section scripts
{
    <script>
                var url_datatable = '@Url.Action("ObtenerConsultas", "MantProductos")';
                var url_edit = '@Url.Action("Edit", "MantProductos")';
                var url_delete = '@Url.Action("Delete", "MantProductos")';
    </script>

    <script src="~/Core/Js/Producto.js"></script>
}
